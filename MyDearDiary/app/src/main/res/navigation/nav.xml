<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/PostsFragment">

    <fragment
        android:id="@+id/PostsFragment"
        android:name="com.project.mydeardiary.ui.posts.PostsFragment"
        android:label="My Dear Diary"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_postsFragment_to_addEditPostFragment"
            app:destination="@id/addEditPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/addEditPostFragment"
        android:name="com.project.mydeardiary.ui.addEditPost.addEditPostFragment"
        android:label="{title}"
        tools:layout="@layout/fragment_edit_post">
        <argument
            android:name="post"
            android:defaultValue="@null"
            app:argType="com.project.mydeardiary.data.Post"
            app:nullable="true" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>